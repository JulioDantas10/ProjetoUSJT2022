<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre o seu role!</h1>
    <p id="main-subtitle" class="text-center">Aqui você encontra os melhores eventos de SP</p>
    <form id="search-form" class="form-inline" action="/", method="GET">
        <div class="form-group col-md-10">
            <input type="text" class="form-control" id="evento" name="evento"
                placeholder="Digite o evento que está buscando">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Procurar</button>
        </div>
    </form>
</div>
<main>
    <div id="eventos-container" class="container">
        <div class="row">
            <div class="col-md-12">
                {{#if search}}
                 <h2 id="evento-list-title">Buscando evento que contem: {{search}}</h2>
                {{else}}
                {{/if}}
                <ul id="evento-list" class="list-group">
                    {{#each eventos}}
                    <li class="list-group-item {{#if dataValue.new_evento}}new-evento{{/if}}">
                        <img src="\img\museu.jpg" alt="Site">
                        <p>{{dataValues.company}}</p>
                        <h2>{{dataValues.title}}</h2>
                        <p>R${{dataValues.value}}</p>
                        <span class="new-evento-label">Novo</span>
                        <a href="./Museu da Língua Portuguesa.html" class="btn btn-primary">Ver evento</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</main>